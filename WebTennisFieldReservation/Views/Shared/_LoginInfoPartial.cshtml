@using System.Security.Claims;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    string? username = User.FindFirstValue(ClaimsNames.Fullname);
}

<ul class="navbar-nav">
    @if (username == null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Login" asp-route-returnurl="@Context.Request.Path">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Register" asp-route-returnurl="@Context.Request.Path">Register</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Welcome @username</span>
        </li>
        <li class="nav-item">
            <form method="post" asp-controller="Users" asp-action="Logout" asp-route-returnurl="@Context.Request.Path">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>           
        </li>
    }   
</ul>
