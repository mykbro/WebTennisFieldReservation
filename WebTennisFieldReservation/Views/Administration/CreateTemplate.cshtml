@model EditTemplateModel

@{
    ViewData["Title"] = "Create a new template";   
}

<h3>@ViewData["Title"]</h3>
<div class="row my-3">
    <div class="col-1">
    </div>
    <div class="col-10">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name"/>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description"/>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">           
                <table class="table">
                    <thead>
                        <tr>
                            <th>@*just to leave the space*@</th>
                            <th>@*just to leave the space*@</th>
                            <th>Mon</th>
                            <th>Tue</th>
                            <th>Wed</th>
                            <th>Thu</th>
                            <th>Fri</th>
                            <th>Sat</th>
                            <th>Sun</th>
                        </tr>
                        <tr>
                            <th>@*just to leave the space*@</th>
                            <th>@*just to leave the space*@</th>
                                             
                            @for(int dow = 0; dow < 7; dow++)
                            {
                                <th>
                                   <div class="d-inline-block">
                                       <button type="button" class="btn btn-primary square" onclick="selectAllCheckboxes('dow_@dow', true)">+</button>
                                    </div>
                                   <div class="d-inline-block">
                                       <button type="button" class="btn btn-primary square" onclick="selectAllCheckboxes('dow_@dow', false)">-</button>  
                                   </div>                                    
                                </th>  
                            }  
                        </tr>
                    </thead>
                    <tbody>
                        @for(int hour = 0; hour < 24; hour++)
                        {
                            <tr>
                                @{
                                    string displayHour = $"{hour:d2}:00 - {hour + 1:d2}:00";
                                }

                                <td>@displayHour</td>
                                <td>
                                    <div class="d-inline-block">
                                       <button type="button" class="btn btn-primary square" onclick="selectAllCheckboxes(@hour, true)">+</button>  
                                    </div>
                                     <div class="d-inline-block">
                                       <button type="button" class="btn btn-primary square" onclick="selectAllCheckboxes(@hour, false)">-</button> 
                                    </div>                                                                   
                                </td> 

                                @for(int dayOfWeek = 0; dayOfWeek < 7; dayOfWeek++)
                                {
                                    @*<partial name="_TemplateRowPartial" model="new TemplateRowModel(dayOfWeek, hour)"/>*@
                                    <td>
                                        @{                                            
                                            int checkBoxId = dayOfWeek * 24 + hour;
                                        }
                                        <input type="hidden" name="TemplateEntryModels.Index" value="@checkBoxId" />   @*this field allows us to pass lists with non-sequential indexes*@
	                                    <input type="checkbox" id="@checkBoxId" class="dow_@dayOfWeek @hour" name="TemplateEntryModels[@checkBoxId].WeekSlot" value="@checkBoxId"/>
                                        @*<input type="hidden" name="TemplateEntryModels[@checkBoxId].Price" value="0.50"/>*@
                                    </td>
                                }
                            </tr>
                        }                                 
                    </tbody>
                </table>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>   
</div>

@section Scripts{
    <script src="/js/template.js" type="text/javascript"></script>
    <partial name="_ValidationScriptsPartial" />
}

