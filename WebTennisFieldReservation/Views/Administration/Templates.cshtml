@model List<Template>


@{
    ViewData["Title"] = "Templates administration";
    int counter = 1;
}

<div class="row">
    <div class="mb-3">
        <table class="table table-hover">
            <thead class="fw-bold">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th> 
                    <th>@*Buttons*@</th>                    
                </tr>            
            </thead>
            <tbody>         
                @foreach(Template templateData in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@templateData.Name</td>
                        <td>@templateData.Description</td>
                        <td>      
                            <div class="d-inline-block">
                                <a class="btn btn-primary" asp-action="TemplateDetails" asp-route-id="@templateData.Id">Edit</a>      
                            </div>
                            <div class="d-inline-block">
                                 <form method="post" asp-action="DeleteTemplate" asp-route-id="@templateData.Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>  
                            </div>                             
                                                                                    
                        </td>                       
                        @{
                            counter++;
                        }
                    </tr>
                }     
            </tbody>
        </table>
    </div>    
    <div>
        <a asp-action="CreateTemplate" class="btn btn-primary">Add Template +</a>
    </div>
</div>