@model PasswordResetModel

@{
    ViewData["Title"] = "Reset password";
}

<div class="row">
    <h3>@ViewData["Title"]</h3>
    <p>Plese enter your new password:</p> 
    <div class="col-4">
        <form method="post">
            <div class="form-floating">               
                <input asp-for="Password" class="form-control" autocomplete="new-password"/>
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>  
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password"/>
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Token" value="@Context.Request.Query[QueryFieldsNames.Token]" />

            <button type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
        </form>       
    </div>    
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}