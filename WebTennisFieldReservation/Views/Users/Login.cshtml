@model LoginUserModel

@{
    ViewData["Title"] = "User login";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-returnurl="@Context.Request.Query[QueryFieldsNames.ReturnUrl]">
            <h3>@ViewData["Title"]</h3> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for="RememberMe" class="form-check-label">Remember me:</label>
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
            </div>
            <div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
            </div>            
        </form>
    </div>
    <div class="mb-3 mt-3">
        <p>
            <a asp-action="SendResetPasswordLink">Forgot password</a>
        </p>
        <p>
            <a asp-action="ResendConfirmationEmail">Resend confirmation link</a>
        </p>            
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
