@model EditPasswordModel

@{
    ViewData["Title"] = "Edit password";
    string id = (string?) Context.Request.RouteValues["id"] ?? "";
}

<h3>@ViewData["Title"]</h3>
<div class="row">   
    <div class="col-4">        
        <form method="post" asp-route-id="@id">        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CurrentPassword"></label>
                <input asp-for="CurrentPassword" class="form-control" autocomplete="password"/>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">   
                <label asp-for="NewPasswordConfirmation"></label>
                <input asp-for="NewPasswordConfirmation" class="form-control" autocomplete="new-password"/>
                <span asp-validation-for="NewPasswordConfirmation" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Update password</button>
        </form>
    </div> 
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
